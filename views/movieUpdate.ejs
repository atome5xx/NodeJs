<!-- views/movieUpdate.ejs -->
<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
    <script src="/script/script.js"></script>
</head>

<body>
    <h1>
        Modification du film : <%= movie.title %>
    </h1>
    <div class="principal">
        <form id="putForm">
            <div>
                <div>
                    <label for="title">Titre :</label>
                    <input type="text" id="title" name="title" value="<%= movie.title %>" required>
                </div>

                <div>
                    <label for="rating">Note :</label>
                    <input type="text" id="rating" name="rating" value="<%= movie.rating %>" required>
                </div>

                <div>
                    <label for="year">Année :</label>
                    <input type="text" id="year" name="year" value="<%= movie.year %>" required>
                </div>
            </div>

            <div class="actors-container" id="actorsContainer">
                <h3>Acteurs :</h3>
                <% movie.actors.forEach(actor=> { %>
                    <div class="actor-group">
                        <input type="text" name="actors[]" placeholder="Nom de l'acteur" value="<%= actor %>" required>
                        <button type="button" class="remove-actor-btn" onclick="removeActor(this)">Supprimer</button>
                    </div>
                    <% }) %>
            </div>
            <div><button type="button" onclick="addActor()">Ajouter un Acteur</button></div>

            <div class="form-group">
                <button type="button" onclick="updateMovie(
                '<%= movie.id %>',
                document.getElementById('title').value,
                document.getElementById('rating').value,
                document.getElementById('year').value,
                Array.from(document.getElementsByName('actors[]')).map(input => input.value)
                )">Modifier</button>
            </div>
        </form>
    </div>
    <a href="/movies">Retour à l'ensemble des films</a>
</body>

</html>